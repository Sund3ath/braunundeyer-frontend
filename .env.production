# Production Environment Variables
# Domain Configuration
DOMAIN=braunundeyer.de
API_DOMAIN=api.braunundeyer.de
CMS_DOMAIN=cms.braunundeyer.de

# Security
JWT_SECRET=your-very-secure-jwt-secret-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-very-secure-refresh-secret-change-this-in-production-min-32-chars

# Database
DATABASE_PATH=/app/data/database.sqlite
DATABASE_BACKUP_PATH=/app/backups

# Email Configuration (Strato)
SMTP_HOST=smtp.strato.de
SMTP_PORT=465
SMTP_USER=info@braunundeyer.de
SMTP_PASSWORD=your-actual-smtp-password-change-this
EMAIL_FROM=info@braunundeyer.de
EMAIL_TO=info@braunundeyer.de

# Let's Encrypt
LETSENCRYPT_EMAIL=admin@braunundeyer.de

# DeepSeek API (for translations)
DEEPSEEK_API_KEY=sk-374a85178de1439d8b7438c2ac56be77

# Monitoring (optional)
SENTRY_DSN=

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/braunundeyer

# Resource Limits
NODE_OPTIONS=--max-old-space-size=2048
PM2_MAX_MEMORY_RESTART=1G

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
