# Production Environment Variables
# Copy this file to .env.production and fill in the values

# JWT Secret for authentication (generate a strong random string)
JWT_SECRET=your-production-jwt-secret-here-change-this

# Email for Let's Encrypt SSL certificates
LETSENCRYPT_EMAIL=admin@braunundeyer.de

# Database encryption key (optional, for sensitive data)
DB_ENCRYPTION_KEY=your-database-encryption-key

# Email configuration (for contact forms)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@braunundeyer.de
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@braunundeyer.de

# DeepSeek API (for translations - optional)
DEEPSEEK_API_KEY=your-deepseek-api-key

# Analytics (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MATOMO_URL=https://analytics.example.com
MATOMO_SITE_ID=1

# Backup configuration (optional)
BACKUP_S3_BUCKET=braunundeyer-backups
BACKUP_S3_REGION=eu-central-1
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key